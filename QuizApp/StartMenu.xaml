<Window x:Class="QuizApp.StartMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:quizapp="clr-namespace:QuizApp"
        Title="Start Menu" Height="300" Width="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <TextBlock Text="Willkommen zur Quiz-App"
                 FontSize="24"
                 FontWeight="Bold" />
        </StackPanel>

        <StackPanel Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Button x:Name="startButton"
              Content="Start Quiz"
              Width="100"
              Height="30"
              Click="startButton_Click" />
        </StackPanel>

        <StackPanel Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Button x:Name="exitButton"
              Content="Exit"
              Width="100"
              Height="30"
              Click="exitButton_Click" />
        </StackPanel>
    </Grid>
</Window>